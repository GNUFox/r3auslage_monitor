    "version": "0.2.0",
    "configurations": [
        {
            "name": "Viewer",
            "type": "debugpy",
            "request": "launch",
            "program": "present.py",
            "console": "integratedTerminal",
            "args": [
                "-m", "${workspaceFolder}/webpages", "1",
                "-m", "${workspaceFolder}/photos", "3",
                "-m", "${workspaceFolder}/videos", "1",
                "--viewer", "mpv --loop --ao=null",
                "-t", "2"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}